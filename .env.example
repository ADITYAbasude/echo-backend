# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Security and CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# MongoDB Configuration
DB_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Configuration
JWT_SECRET=your_strong_jwt_secret
JWT_EXPIRES_IN=24h

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY_ID=your_aws_secret_key
AWS_REGION=your-region-1
AWS_VIDEO_STORAGE_BUCKET_NAME=your-video-bucket
AWS_TRANSCODED_VIDEO_STORAGE_BUCKET_NAME=your-transcoded-video-bucket

# Redis Configuration
REDIS_URL=redis://default:password@host.redis-cloud.com:port

# Email Configuration (if using email services)
SMTP_HOST=smtp.provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# Other API Keys
API_KEY_NAME=your_api_key

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600

# Websocket Configuration
WS_PATH=/graphql

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.region.auth0.com
AUTH0_AUDIENCE=your-api-audience
CLIENT_SECRET=your-client-secret

# Cloudinary Configuration
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Transcoder Service
TRANSCODER_URL=localhost:50051
